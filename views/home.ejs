 <h1>
    Home Page | <%=title%>
</h1>

<section>
    <h4>Post</h4>
    <%if(locals.user){%>
    <form action="/posts/create" method="post">
        <textarea name="content"  cols="30" rows="5" placeholder="Type her ..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>
    <div id="posts-list-container">
        <ul>
            <% for(post of post){ %>
                
            <li>
                <p>
                    <%= post.content %>
                    <br>
                    <small>
                        <%= post.user.name %>
                    </small>
                </p>
                <div>
                    <%if(locals.user){%>
                        <form action="/comments/create" method="post">
                            <input type="text" name="content" placeholder="Type hear to add comment ..." required>
                            <input type="hidden" name="post" value="<%=post._id%>">
                            <input type="submit" value="Add">
                        </form>
                    <%}%> 
                    <div>
                        <ul>
                            <%for(comments of post.comments) { %>

                                <p>
                                    <%=comments.content%>
                                    <br>
                                    <small>
                                        <%=comments.user.name%>
                                    </small>
                                </p>
                                
                            <%}%>    
                        </ul>
                    </div>   
                </div>
            </li>
                
            <%} %>
        </ul>
        
    </div>
</section>